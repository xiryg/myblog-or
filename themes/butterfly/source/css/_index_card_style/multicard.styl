/* Default color variables */
:root {
  --recent-post-bgcolor: rgba(255, 255, 255, 0.85);
  --article-content-bgcolor: #53c4c4;
  --recent-post-arrow: #ffffff;
  --recent-post-cover-shadow: #ffffff;
  --recent-post-transition: all 0.5s cubic-bezier(0.59, 0.01, 0.48, 1.17);
}

/* Dark theme color variables */
[data-theme="dark"] {
  --recent-post-bgcolor: rgba(35, 35, 35, 0.95);
  --article-content-bgcolor: #99999a;
  --recent-post-arrow: #37e2dd;
  --recent-post-cover-shadow: #232323;
}

/* Default card layout */
.recent-posts {
  padding: 0 15px;
  height: fit-content;
}

.recent-post-item {
  margin-bottom: 15px;
  background: var(--recent-post-bgcolor);
  overflow: hidden;
  border-radius: 15px;
}

.recent-post-content {
  display: flex;
  background: var(--recent-post-bgcolor);
  position: relative;
}

.recent-post-cover {
  display: flex;
  background: transparent;
}

.recent-post-info {
  display: flex;
  background: transparent;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.article-title {
  height: 50%;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: flex-end;
  flex-direction: column;
}

.article-title-link {
  color: var(--text-highlight-color);
  transition: all 0.2s ease-in-out;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-title-link:hover {
  color: text-hover;
}

.recent-post-meta {
  height: 50%;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
}

.article-meta-wrap {
  color: #969797;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-meta-wrap a {
  color: var(--text-highlight-color);
  transition: all 0.2s ease-in-out;
}

.article-meta-wrap a:hover {
  color: text-hover;
}

.article-content {
  display: flex;
  text-align: center;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.article-content-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #fff;
  text-shadow: 1px 2px 3px #000;
}

.article-content-text.ads-wrap {
  display: block !important;
  height: auto !important;
}

nav#pagination {
  width: 100%;
}

/* Card unit layout */
.recent-posts {
  padding: 0 15px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.recent-post-item {
  border-radius: 15px;
  overflow: hidden;
}

.recent-post-content {
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: center;
  max-height: 350px;
  height: auto;
  width: 100%;
}

.recent-post-cover {
  width: 100%;
  height: 200px;
  clip-path: polygon(0 130px, 0 0, 100% 0, 100% 130px, 50% 100%);
}

.recent-post-cover img {
  height: 200px;
  width: 100%;
  object-fit: cover;
}

.recent-post-info {
  height: 150px;
  width: 100%;
  padding: 0px 25px 5px 25px;
}

.article-title {
  margin: 0px 40px;
  font-size: 18px;
}

.article-title-link {
  -webkit-line-clamp: 2;
}

.recent-post-meta {
  margin: 0px 20px;
}

.article-meta-wrap {
  font-size: 12px;
  -webkit-line-clamp: 3;
}

.article-content {
  position: absolute;
  height: 200px;
  width: 100%;
  background: rgba(25, 25, 25, 0.5);
  clip-path: polygon(0 130px, 0 0, 100% 0, 100% 130px, 50% 100%);
}

.article-content-text {
  -webkit-line-clamp: 3;
  font-size: 16px;
  margin: 0px 25px 30px 25px;
}

.article-content-text::before {
  content: "❝";
  font-size: 20px;
}

.article-content-text::after {
  content: "❞";
  font-size: 20px;
}

.recent-post-arrow {
  display: block;
  background: var(--article-content-bgcolor);
  position: absolute;
  height: 10px;
  width: 20px;
  clip-path: polygon(0 0, 100% 0, 50% 100%);
  top: 20px;
}

/* Three-column layout for larger screens */
@media screen and (min-width: 1069px) {
  .recent-posts {
    .recent-post-item {
      width: 32.3%;
      margin: 0px 1% 20px 0px;
    }
  }
}

/* Two-column layout for medium screens */
@media screen and (min-width: 572px) and (max-width: 1068px) {
  .recent-posts {
    .recent-post-item {
      width: 47%;
      margin: 0px 3% 20px 0px;
    }
  }
}

/* Single-column layout for small screens */
@media screen and (max-width: 572px) {
  .recent-posts {
    .recent-post-item {
      width: 100%;
    }
  }
}


